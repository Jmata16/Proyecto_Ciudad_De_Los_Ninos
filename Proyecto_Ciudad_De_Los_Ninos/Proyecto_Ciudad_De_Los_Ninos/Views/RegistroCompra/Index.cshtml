@model IEnumerable<API_Ciudad_De_Los_Ninos.Models.RegistroCompra>
@{
    ViewData["Title"] = "Registro de Compras";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tickete Id</th>
            <th>Usuario</th> 
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="estado-@item.estado">
                <td>@item.Id</td>
                <td>@item.TicketeId</td>
                <td>@item.User.nombre</td> 
                <td>@item.estado</td>
                <td>
                    @if (item.estado != "Entregado")
                    {
                        <a asp-controller="RegistroCompra" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Entregado</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
