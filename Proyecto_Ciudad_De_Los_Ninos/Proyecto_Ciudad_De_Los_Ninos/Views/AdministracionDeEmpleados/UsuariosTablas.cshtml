        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: #ff6666;
            color: #ffffff;
        }

        tr:nth-child(even) {
            background-color: #ffe6e6;
        }

        tr:hover {
            background-color: #ffc2c2;
        }

        .editable-select {
            display: none;
        }
    </style>
</head>
