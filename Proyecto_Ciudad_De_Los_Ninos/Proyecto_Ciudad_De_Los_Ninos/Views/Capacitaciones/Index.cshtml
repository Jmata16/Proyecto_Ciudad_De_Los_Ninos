@model IEnumerable<Proyecto_Ciudad_De_Los_Ninos.Models.Capacitaciones>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }

        th {
            background-color: #f8f8f8;
            font-weight: bold;
            color: #333;
            text-transform: uppercase;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .actions a {
            margin-right: 10px;
            color: #007bff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .actions a:hover {
                color: #0056b3;
            }

        #footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container">
        <p>
            <a asp-action="Create" style="color: #007bff; text-decoration: none;">Crear Nuevo</a>
        </p>
        <table>
            <thead>
                <tr>
                    <th>Nombre Capacitacion</th>
                    <th>Fecha</th>
                    <th>Descripcion</th>
                    <th>Nombre Empleado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.nombre_capacitacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                        <td>@(item.descripcion.Length > 20 ? item.descripcion.Substring(0, 20) + "..." : item.descripcion)</td>
                        <td>@(item.User.nombre + " " + item.User.apellidos)</td>
                        <td class="actions">
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a href="#" onclick="confirmDelete('@item.Id')">Delete</a>
                            <form id="deleteForm_@item.Id" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer id="footer">
        @Html.Partial("_footer")
    </footer>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
    <script>
        function confirmDelete(id) {
            if (confirm('¿Estás seguro de que quieres eliminar esta capacitación?')) {
                document.getElementById('deleteForm_' + id).submit();
            }
        }
    </script>
</body>
</html>

