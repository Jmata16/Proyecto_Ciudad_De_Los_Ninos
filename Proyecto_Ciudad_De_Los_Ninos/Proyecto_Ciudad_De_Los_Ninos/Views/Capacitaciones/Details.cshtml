@model Proyecto_Ciudad_De_Los_Ninos.Models.Capacitaciones
@{
    Layout = null;
    ViewData["Title"] = "Capacitaciones";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 39.5px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }



    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4>Detalles de Capacitación</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Nombre de la Capacitación</th>
                        <td>@Html.DisplayFor(model => model.nombre_capacitacion)</td>
                    </tr>
                    <tr>
                        <th scope="row">Fecha</th>
                        <td>@Html.DisplayFor(model => model.fecha)</td>
                    </tr>
                    <tr>
                        <th scope="row">Descripción</th>
                        <td>@Html.DisplayFor(model => model.descripcion)</td>
                    </tr>
                    <tr>
                        <th scope="row">Usuario</th>
                        <td>@Html.DisplayFor(model => model.User.nombre) @Html.DisplayFor(model => model.User.apellidos)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                <div class="col text-end">
                    <a asp-action="Index" class="btn btn-secondary"><i class="ri-arrow-left-circle-line"></i> Volver atrás</a>
                </div>
            </div>
        </div>
    </div>

    <br />
    <!-- Footer -->
    <footer id="footer">
            @Html.Partial("_footer")

    </footer>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
