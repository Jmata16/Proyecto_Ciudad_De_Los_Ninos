@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h1 class="display-4">¡Oops! Algo salió mal.</h1>
        <h2>Código de Error: @Model.StatusCode</h2>
        <p>@Model.Message</p>

        @if (Model.StatusCode == 409)
        {
            <!-- Asumiendo que 409 es el código para conflictos -->
            <p><strong>Nota:</strong> El dato no se pudo editar o eliminar ya que otro usuario lo está utilizando.</p>
        }
    </div>

    @if (Model.ShowRequestId)
    {
        <div class="alert alert-info">
            <p>
                <strong>ID de Solicitud:</strong> <code>@Model.RequestId</code>
            </p>
        </div>
    }

    <div class="alert alert-warning mt-4">
        <h3>¿Necesitas ayuda?</h3>
        <p>
            Si el problema persiste, por favor contacta al soporte técnico.
        </p>
        <p>
            <strong>Correo de soporte:</strong> <a href="mailto:proyectocdn1@outlook.com">proyectocdn1@outlook.com</a>
        </p>
    </div>
</div>

<!-- Agregar estilos adicionales en tu archivo CSS si es necesario -->
<style>
    .display-4 {
        font-size: 2.5rem;
        font-weight: 300;
    }

    .alert-info {
        background-color: #d9edf7;
        border-color: #bce8f1;
        color: #31708f;
    }

    .alert-warning {
        background-color: #fcf8e3;
        border-color: #faebcc;
        color: #8a6d3b;
    }
</style>
