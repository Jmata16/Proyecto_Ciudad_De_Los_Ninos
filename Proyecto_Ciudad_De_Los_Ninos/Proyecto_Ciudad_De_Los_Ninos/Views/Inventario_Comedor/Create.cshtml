@model API_Ciudad_De_Los_Ninos.Models.Inventario_Comedor

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Creación del Inventario Comedor</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
            }

        .form-control {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .create-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4 class="text-center">Creación del  Inventario Comedor</h4>
        <hr />
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label for="nombre_alimento" class="col-sm-2 col-form-label">Nombre del Alimento</label>
                <div class="col-sm-10">
                    <input asp-for="nombre_alimento" class="form-control" />
                    <span asp-validation-for="nombre_alimento" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="cantidad_disponible" class="col-sm-2 col-form-label">Cantidad Disponible</label>
                <div class="col-sm-10">
                    <input asp-for="cantidad_disponible" class="form-control" />
                    <span asp-validation-for="cantidad_disponible" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="fecha_ultima_reposicion" class="col-sm-2 col-form-label">Fecha de la Última Reposición</label>
                <div class="col-sm-10">
                    <input asp-for="fecha_ultima_reposicion" class="form-control" />
                    <span asp-validation-for="fecha_ultima_reposicion" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="proveedor" class="col-sm-2 col-form-label">Proveedor</label>
                <div class="col-sm-10">
                    <input asp-for="proveedor" class="form-control" />
                    <span asp-validation-for="proveedor" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="imagen" class="col-sm-2 col-form-label">Imagen</label>
                <div class="col-sm-10">
                    <input asp-for="imagen" type="file" class="form-control" />
                    <span asp-validation-for="imagen" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </div>
        </form>
        <!-- Volver atrás -->
        <div class="row mt-3">
            <div class="col text-end">
                <a asp-action="Index" class="btn btn-secondary"><i class="ri-arrow-left-circle-line"></i>  Volver atrás</a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        @Html.Partial("_footer")
    </div>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
