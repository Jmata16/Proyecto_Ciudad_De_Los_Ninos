                        }

                        tr:hover {
                            background-color: #f5f5f5;
                        }*/


        .table td {
            word-wrap: break-word;
            white-space: normal;
            vertical-align: middle; /* Asegura el centrado vertical de contenido */
        }

            .table td.observaciones {
                max-width: 200px; /* Ajusta este valor según tus necesidades */
                overflow-wrap: break-word;
                word-wrap: break-word;
                white-space: normal;
            }


        .actions a {
            margin-right: 10px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .actions a:hover {
                color: #0056b3;
            }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

            .create-button:hover {
                background-color: #0056b3;
            }

    </style>
</head>
<body>
        <!-- Contenido del encabezado -->
        @Html.Partial("_header")

        <div class="content">
            <div class="container">
                <p>
                    <a asp-action="Create" class="btn btn-primary"><i class="ri-add-circle-line" title="Crear"></i>  Crear Nuevo</a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead class="table-danger">
                            <tr>
                                <th>Nombre del alimento</th>
                                <th>Cantidad disponible</th>
                                <th>Fecha de la última reposición</th>
                                <th>Proveedor</th>
                                <th>Imágen</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.nombre_alimento)</td>
                                    <td>@Html.DisplayFor(modelItem => item.cantidad_disponible)</td>
                                    <td>@Html.DisplayFor(modelItem => item.fecha_ultima_reposicion)</td>
                                    <td>@Html.DisplayFor(modelItem => item.proveedor)</td>
                                    <td>
                                        <img src="@Url.Action("GetImage", new{id= item.Id})" width="100" height="100" alt="@item.nombre_alimento" class="img-fluid" />
                                    </td>
                                <td class="actions">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm d-inline-flex align-items-center me-2"><i class="ri-edit-line me-1" title="Editar"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm d-inline-flex align-items-center me-2"><i class="ri-eye-line me-1" title="Detalles"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm d-inline-flex align-items-center"><i class="ri-delete-bin-2-line me-1" title="Eliminar"></i></a>
                                </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </br>
    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>