@model API_Ciudad_De_Los_Ninos.Models.Inventario_Comedor

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles del Inventario Comedor</title>
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        #footer {
            margin-top: 20px;
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: left;
            clear: both;
        }

            #footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4>Detalles del Inventario Comedor</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row" class="col-sm-2">Alimento</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.nombre_alimento)</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-2">Cantidad</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.cantidad_disponible)</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-2">Reposición</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.fecha_ultima_reposicion)</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-2">Proveedor</th>
                        <td class="col-sm-10">@Html.DisplayFor(model => model.proveedor)</td>
                    </tr>
                    <tr>
                        <th scope="row" class="col-sm-2">Imagen</th>
                        <td class="col-sm-10 img-container">
                            <img src="@Url.Action("GetImage", new { id = Model.Id })"  class="img-thumbnail" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Editar</a>
                <a asp-action="Index" class="btn btn-success">Volver atrás</a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
