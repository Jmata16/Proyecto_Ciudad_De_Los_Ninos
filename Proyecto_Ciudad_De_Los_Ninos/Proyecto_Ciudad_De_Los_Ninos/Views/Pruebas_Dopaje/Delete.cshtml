@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Prueba de Dopaje</title>
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        #footer {
            margin-top: 20px;
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: left;
            clear: both;
        }

            #footer p {
                margin: 0;
            }

        .table td {
            word-wrap: break-word;
            white-space: normal;
            vertical-align: middle;
        }

            .table td.observaciones {
                max-width: 200px;
                overflow-wrap: break-word;
                word-wrap: break-word;
                white-space: normal;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <div class="container-main">
        <h4>Desactivar Prueba de Dopaje</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Nombre de Usuario</th>
                        <td>@Html.DisplayFor(model => model.Usuario.nombre_usuario)</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre del Joven</th>
                        <td>@Html.DisplayFor(model => model.Joven.nombre)</td>
                    </tr>
                    <tr>
                        <th scope="row">Fecha</th>
                        <td>@Html.DisplayFor(model => model.fecha)</td>
                    </tr>
                    <tr>
                        <th scope="row">Lugar</th>
                        <td>@Html.DisplayFor(model => model.lugar)</td>
                    </tr>
                    <tr>
                        <th scope="row">Resultado</th>
                        <td>@Html.DisplayFor(model => model.resultado)</td>
                    </tr>
                    <tr>
                        <th scope="row">Observaciones</th>
                        <td class="observaciones">@Html.DisplayFor(model => model.observaciones)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Desactivar
        </button>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-secondary"><i class="ri-arrow-left-circle-line"></i>  Volver atrás</a>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Desactivación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    No se eliminarán los datos permanentemente, solo se desactivarán.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        @Html.Partial("_footer")
    </div>

    <!-- Formulario de desactivación con id -->
    <form id="deleteForm" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
    </form>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Al hacer clic en el botón de confirmar en el modal, se envía el formulario
        document.getElementById("confirmDeleteButton").addEventListener("click", function () {
            // Enviar el formulario con el id deleteForm
            document.getElementById("deleteForm").submit();
        });
    </script>
</body>
</html>
