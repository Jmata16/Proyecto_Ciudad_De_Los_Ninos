@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Prueba de Dopaje</title>
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff; 
            padding: 20px;
            border: 1px solid #ddd; 
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1); 
            margin: 20px auto; 
            max-width: 800px; 
            overflow: hidden; 
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px; 
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        #footer {
            margin-top: 20px; 
            background-color: #f8f9fa; 
            padding: 10px 0;
            text-align: left; 
            clear: both; 
        }

            #footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4>Eliminación de Prueba de Dopaje</h4>
        <hr />
        <div class="row">
            <dt class="col-sm-2">ID Usuario</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.id_usuario)</dd>
            <dt class="col-sm-2">ID Joven</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.id_joven)</dd>
            <dt class="col-sm-2">Fecha</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.fecha)</dd>
            <dt class="col-sm-2">Lugar</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.lugar)</dd>
            <dt class="col-sm-2">Resultado</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.resultado)</dd>
            <dt class="col-sm-2">Observaciones</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.observaciones)</dd>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-success">Volver atrás</a>
        </form>
    </div>

    <!-- Footer original -->
    <div id="footer">
        @Html.Partial("_footer")
    </div>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
