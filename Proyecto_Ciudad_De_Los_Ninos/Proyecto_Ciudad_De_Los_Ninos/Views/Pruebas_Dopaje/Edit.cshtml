@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Prueba de Dopaje</title>
    <style>
        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-size: 15px;
                color: #333;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 10px;
                font-size: 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group span {
                color: red;
                font-size: 12px;
            }

        .actions {
            margin-top: 20px;
            text-align: center; /* Alineación de los botones al centro */
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .create-button:hover {
                background-color: #0056b3;
            }

        .container-main {
            background-color: #ffffff; /* Color de fondo blanco */
            padding: 20px;
            border: 1px solid #ddd; /* Borde delgado gris claro */
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1); /* Sombra ligera */
            margin: 20px auto; /* Centrado horizontal */
            max-width: 800px; /* Ancho máximo del contenedor */
            overflow: hidden; /* Evita que el contenido se escape */
            text-align: center; /* Alineación de todo el contenido al centro */
        }

        #footer {
            margin-top: 20px; /* Espacio superior al footer */
            background-color: #f8f9fa; /* Color de fondo del footer original */
            padding: 10px 0;
            text-align: left; /* Alineación a la izquierda */
            clear: both; /* Limpiar floats */
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* Centra horizontalmente los elementos dentro de .row */
            text-align: left; /* Alineación del texto a la izquierda */
        }

        .col-sm-2 {
            flex: 0 0 30%; /* Ancho de las etiquetas */
            max-width: 30%;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px; /* Espacio entre etiquetas */
            text-align: right; /* Alineación de las etiquetas a la derecha */
            padding-right: 10px; /* Espaciado derecho para las etiquetas */
        }

        .col-sm-10 {
            flex: 0 0 60%; /* Ancho de los campos */
            max-width: 60%;
            color: #555;
            margin-bottom: 15px;
            text-align: left; /* Alineación del texto a la izquierda */
            padding-left: 10px; /* Espaciado izquierdo para los campos */
        }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4>Editar Prueba de Dopaje</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="id_usuario" class="control-label">ID Usuario</label>
                        <input asp-for="id_usuario" class="form-control" />
                        <span asp-validation-for="id_usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="id_joven" class="control-label">ID Joven</label>
                        <input asp-for="id_joven" class="form-control" />
                        <span asp-validation-for="id_joven" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="fecha" class="control-label">Fecha</label>
                        <input asp-for="fecha" class="form-control" />
                        <span asp-validation-for="fecha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="lugar" class="control-label">Lugar</label>
                        <input asp-for="lugar" class="form-control" />
                        <span asp-validation-for="lugar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="resultado" class="control-label">Resultado</label>
                        <select asp-for="resultado" class="form-control">
                            <option value="">Seleccione...</option>
                            <option value="Positivo">Positivo</option>
                            <option value="Negativo">Negativo</option>
                        </select>
                        <span asp-validation-for="resultado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="observaciones" class="control-label">Observaciones</label>
                        <input asp-for="observaciones" class="form-control" />
                        <span asp-validation-for="observaciones" class="text-danger"></span>
                    </div>
                    <div class="actions">
                        <input type="submit" value="Guardar Cambios" class="create-button" />
                        <a asp-action="Index" class="create-button">Volver atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        @Html.Partial("_footer")
    </div>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
