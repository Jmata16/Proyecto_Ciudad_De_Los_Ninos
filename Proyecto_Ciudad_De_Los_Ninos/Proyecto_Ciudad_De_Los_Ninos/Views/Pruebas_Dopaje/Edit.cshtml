@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Prueba de Dopaje</title>
    <style>
        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-size: 15px;
                color: #333;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                font-size: 15px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group span {
                color: red;
                font-size: 12px;
            }

        .actions {
            margin-top: 20px;
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .create-button:hover {
                background-color: #0056b3;
            }

        #footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container">
        <h4>Editar Prueba de Dopaje</h4>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="id_usuario" class="control-label">ID Usuario</label>
                        <input asp-for="id_usuario" class="form-control" />
                        <span asp-validation-for="id_usuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="id_joven" class="control-label">ID Joven</label>
                        <input asp-for="id_joven" class="form-control" />
                        <span asp-validation-for="id_joven" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="fecha_hora" class="control-label">Fecha y Hora</label>
                        <input asp-for="fecha_hora" class="form-control" />
                        <span asp-validation-for="fecha_hora" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="lugar" class="control-label">Lugar</label>
                        <input asp-for="lugar" class="form-control" />
                        <span asp-validation-for="lugar" class="text-danger"></span>
                    </div>
                    <div class="actions">
                        <input type="submit" value="Guardar Cambios" class="create-button" />
                        <a asp-action="Index" class="create-button">Volver atrás</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
