@model IEnumerable<API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pruebas de Dopaje</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .container {
            padding: 20px;
        }

        .actions a {
            margin-right: 10px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .actions a:hover {
                color: #0056b3;
            }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

            .create-button:hover {
                background-color: #0056b3;
            }

        .table td {
            word-wrap: break-word;
            white-space: normal;
            vertical-align: middle; /* Asegura el centrado vertical de contenido */
        }

            .table td.observaciones {
                max-width: 200px; /* Ajusta este valor según tus necesidades */
                overflow-wrap: break-word;
                word-wrap: break-word;
                white-space: normal;
            }
    </style>
</head>
<body>

    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <div class="content">
        <div class="container">
            <div class="table-responsive">
                <table id="dopajeTable" class="table table-striped table-bordered table-hover">
                    <thead class="table-danger">
                        <tr>
                            <th>Usuario</th>
                            <th>Joven</th>
                            <th>Fecha</th>
                            <th>Lugar</th>
                            <th>Resultado</th>
                            <th>Observaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Usuario?.nombre_usuario</td>
                                <td>@item.Joven?.nombre</td>
                                <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                                <td>@Html.DisplayFor(modelItem => item.lugar)</td>
                                <td>@Html.DisplayFor(modelItem => item.resultado)</td>
                                <td class="observaciones">@Html.DisplayFor(modelItem => item.observaciones)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
    <script>
        $(document).ready(function () {
            $('#dopajeTable').DataTable({
                "paging": true,
                "searching": true,
                "info": true
            });
        });
    </script>
</body>
</html>
