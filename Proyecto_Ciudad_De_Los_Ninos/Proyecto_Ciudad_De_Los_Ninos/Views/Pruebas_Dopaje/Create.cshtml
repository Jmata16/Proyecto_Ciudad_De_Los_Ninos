@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ingreso de Prueba de Dopaje</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
            }

        .form-control {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .create-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4>Ingreso de Prueba de Dopaje</h4>
        <hr />
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="id_usuario" class="control-label">Usuario</label>
                <select asp-for="id_usuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
                <span asp-validation-for="id_usuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_joven" class="control-label">Joven</label>
                <select asp-for="id_joven" class="form-control" asp-items="ViewBag.Jovenes"></select>
                <span asp-validation-for="id_joven" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha" class="control-label">Fecha</label>
                <input asp-for="fecha" class="form-control" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lugar" class="control-label">Lugar</label>
                <input asp-for="lugar" class="form-control" />
                <span asp-validation-for="lugar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="resultado" class="control-label">Resultado</label>
                <select asp-for="resultado" class="form-control">
                    <option value="">Seleccione...</option>
                    <option value="Positivo">Positivo</option>
                    <option value="Negativo">Negativo</option>
                </select>
                <span asp-validation-for="resultado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="observaciones" class="control-label">Observaciones</label>
                <input asp-for="observaciones" class="form-control" />
                <span asp-validation-for="observaciones" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ingresar Prueba de Dopaje" class="create-button" />
            </div>
        </form>
        <!-- Volver atrás -->
        <div style="text-align: center; margin-top: 20px;">
            <a asp-action="Index" class="create-button">Volver atrás</a>
        </div>
    </div>

    <!-- Footer  -->
    <div id="footer">
        @Html.Partial("_footer")
    </div>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
