@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Prueba de Dopaje</title>
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        #footer {
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container">
        <h4>Detalles de la Prueba de Dopaje</h4>
        <hr />
        <div class="row">
            <dt class="col-sm-2">
                ID Usuario
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.id_usuario)
            </dd>
            <dt class="col-sm-2">
                ID Joven
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.id_joven)
            </dd>
            <dt class="col-sm-2">
                Fecha y Hora
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fecha_hora)
            </dd>
            <dt class="col-sm-2">
                Lugar
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.lugar)
            </dd>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-success">Volver atrás</a>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
