@model API_Ciudad_De_Los_Ninos.Models.Pruebas_Dopaje

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Prueba de Dopaje</title>
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        #footer {
            margin-top: 20px;
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: left;
            clear: both;
        }

            #footer p {
                margin: 0;
            }

        .table td {
            word-wrap: break-word;
            white-space: normal;
            vertical-align: middle; /* Asegura el centrado vertical de contenido */
        }

            .table td.observaciones {
                max-width: 200px; /* Ajusta este valor según tus necesidades */
                overflow-wrap: break-word;
                word-wrap: break-word;
                white-space: normal;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container-main">
        <h4>Detalles de la Prueba de Dopaje</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Usuario</th>
                        <td>@Model.Usuario?.nombre_usuario</td>
                    </tr>
                    <tr>
                        <th scope="row">Joven</th>
                        <td>@Model.Joven?.nombre</td>
                    </tr>
                    <tr>
                        <th scope="row">Fecha</th>
                        <td>@Html.DisplayFor(model => model.fecha)</td>
                    </tr>
                    <tr>
                        <th scope="row">Lugar</th>
                        <td>@Html.DisplayFor(model => model.lugar)</td>
                    </tr>
                    <tr>
                        <th scope="row">Resultado</th>
                        <td>@Html.DisplayFor(model => model.resultado)</td>
                    </tr>
                    <tr>
                        <th scope="row">Observaciones</th>
                        <td class="observaciones">@Html.DisplayFor(model => model.observaciones)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
                <div class="col text-end">
                    <a asp-action="Index" class="btn btn-secondary"><i class="ri-arrow-left-circle-line"></i>  Volver atrás</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        @Html.Partial("_footer")
    </div>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
