@model API_Ciudad_De_Los_Ninos.Models.Inventario_Higiene_Personal

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        .container {
            width: 80%;
            margin: 20px auto;
        }

        .row {
            margin-bottom: 20px;
        }

        .col-sm-2 {
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            font-size: 16px;
            color: #555;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-success {
            background-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
            }
    </style>
</head>
<body>
    <!-- Contenido del encabezado -->
    @Html.Partial("_header")

    <!-- Contenido principal -->
    <div class="container">
        <h4 style="color:red;">Detalles del Inventario de Higiene Personal</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Nombre del producto
            </dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.nombre_producto)</dd>

            <dt class="col-sm-2">
               Cantidad Disponible
            </dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.cantidad_disponible)</dd>

            <dt class="col-sm-2">
              Fecha de la última reposición
            </dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.fecha_ultima_reposicion)</dd>

            <dt class="col-sm-2">
                Proveedor
            </dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.proveedor)</dd>
        </dl>

        <div>
            <a asp-action="Index" class="btn btn-success">Volver atrás</a>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
