@model API_Ciudad_De_Los_Ninos.Models.Inventario_Higiene_Personal

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar Inventario</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
                text-align: right;
            }

        .form-control {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        .img-preview {
            max-width: 100%;
            margin-top: 10px;
            margin-bottom: 10px; 
        }

        .btn {
            margin-top: 10px;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
</head>
<body>   
        <!-- Contenido del encabezado -->
        @Html.Partial("_header")

        <!-- Contenido principal -->
        <div class="container-main">
            <h4 class="text-center">Edición del Inventario Higiene Personal</h4>
            <hr />
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="row mb-3">
                    <label for="nombre_producto" class="col-sm-4 col-form-label">Nombre del Producto</label>
                    <div class="col-sm-8">
                        <input asp-for="nombre_producto" class="form-control" />
                        <span asp-validation-for="nombre_producto" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="cantidad_disponible" class="col-sm-4 col-form-label">Cantidad Disponible</label>
                    <div class="col-sm-8">
                        <input asp-for="cantidad_disponible" class="form-control" />
                        <span asp-validation-for="cantidad_disponible" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="fecha_ultima_reposicion" class="col-sm-4 col-form-label">Fecha de la última reposición</label>
                    <div class="col-sm-8">
                        <input asp-for="fecha_ultima_reposicion" class="form-control" />
                        <span asp-validation-for="fecha_ultima_reposicion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="proveedor" class="col-sm-4 col-form-label">Proveedor</label>
                    <div class="col-sm-8">
                        <input asp-for="proveedor" class="form-control" />
                        <span asp-validation-for="proveedor" class="text-danger"></span>
                    </div>
                </div>

                @if (Model.imagen != null)
                {
                    <div class="row mb-3">
                        <label class="col-sm-4 col-form-label">Imagen Actual</label>
                        <div class="col-sm-8">
                            <img src="@Url.Action("GetImage", new { id = Model.Id })" width="100" height="100" class="img-fluid" />
                        </div>
                    </div>
                }

                <div class="row mb-3">
                    <label for="newImagen" class="col-sm-4 col-form-label">Nueva Imagen (opcional)</label>
                    <div class="col-sm-8">
                        <input asp-for="imagen" type="file" class="form-control" />
                    </div>
                </div>

      
                <div class="row mb-3">
                    <label for="precio_unitario" class="col-sm-4 col-form-label">Precio Unitario</label>
                    <div class="col-sm-8">
                        <input asp-for="precio_unitario" class="form-control" />
                        <span asp-validation-for="precio_unitario" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    </div>
                </div>
            </form>

            <!-- Volver atrás -->
            <div class="row mb-3">
                <div class="col text-end">
                    <a asp-action="Index" class="btn btn-secondary">Volver atrás</a>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div id="footer">
            @Html.Partial("_footer")
        </div>

        <!-- Scripts -->
        <script src="js/jquery-1.11.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
        <script src="~/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/plugins.js"></script>
        <script src="~/js/script.js"></script>
    </body>

</html>
