@model API_Ciudad_De_Los_Ninos.Models.Inventario_Higiene_Personal

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    @Html.Partial("_header")
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">


<h4 style="color:red"> Editar tu  Inventario de HigienePersonal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Edit" style="font-size: 15px;color:blue;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="nombre_producto" class="control-label"></label>
                <input asp-for="nombre_producto" class="form-control" />
                <span asp-validation-for="nombre_producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cantidad_disponible" class="control-label"></label>
                <input asp-for="cantidad_disponible" class="form-control" />
                <span asp-validation-for="cantidad_disponible" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha_ultima_reposicion" class="control-label"></label>
                <input asp-for="fecha_ultima_reposicion" class="form-control" />
                <span asp-validation-for="fecha_ultima_reposicion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="proveedor" class="control-label"></label>
                <input asp-for="proveedor" class="form-control" />
                <span asp-validation-for="proveedor" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                        <input type="submit" value="Guardar Cambios" class="create-button" />
            </div>
        </form>
    </div>
</div>

<div>
            <a asp-action="Index" class="create-button">Volver a atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}





</body>
@Html.Partial("_footer")
<script src="js/jquery-1.11.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="~/js/plugins.js"></script>
<script type="text/javascript" src="~/js/script.js"></script>
</html>
