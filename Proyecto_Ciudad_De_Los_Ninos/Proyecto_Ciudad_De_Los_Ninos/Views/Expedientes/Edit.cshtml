@model API_Ciudad_De_Los_Ninos.Models.Expedientes

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit Expediente</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        .form-container {
            width: 50%;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

            .form-group input[type="text"],
            .form-group input[type="date"],
            .form-group select {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group button[type="submit"] {
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .form-group button[type="submit"]:hover {
                    background-color: #0056b3;
                }

        .text-danger {
            color: #dc3545;
        }

        /* Estilos para el botón "Back to List" */
        .back-link {
            margin-top: 20px;
            display: inline-block;
            text-decoration: none;
            color: #007bff;
        }

            .back-link:hover {
                color: #0056b3;
            }

        /* Estilos del footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="form-container">
        <h2>Editando Expediente</h2>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="id_joven" class="control-label">Joven</label>
                <select asp-for="id_joven" class="form-control" asp-items="ViewBag.Jovenes"></select>
                <span asp-validation-for="id_joven" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="nombre_joven" />

            <div class="form-group">
                <label asp-for="edad" class="control-label">Edad</label>
                <input asp-for="edad" class="form-control" />
                <span asp-validation-for="edad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fecha_ingreso" class="control-label">Fecha de Ingreso</label>
                <input asp-for="fecha_ingreso" class="form-control" />
                <span asp-validation-for="fecha_ingreso" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="direccion" class="control-label">Dirección</label>
                <input asp-for="direccion" class="form-control" />
                <span asp-validation-for="direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="telefono_contacto" class="control-label">Teléfono de Contacto</label>
                <input asp-for="telefono_contacto" class="form-control" />
                <span asp-validation-for="telefono_contacto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="tutor_legal" class="control-label">Tutor Legal</label>
                <input asp-for="tutor_legal" class="form-control" />
                <span asp-validation-for="tutor_legal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="antecedentes_medicos" class="control-label">Antecedentes Médicos</label>
                <input asp-for="antecedentes_medicos" class="form-control" />
                <span asp-validation-for="antecedentes_medicos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="historial_academico" class="control-label">Historial Académico</label>
                <input asp-for="historial_academico" class="form-control" />
                <span asp-validation-for="historial_academico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="notas_adicionales" class="control-label">Notas Adicionales</label>
                <input asp-for="notas_adicionales" class="form-control" />
                <span asp-validation-for="notas_adicionales" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar Expediente</button>
            </div>
        </form>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="back-link">Volver al Listado</a>
    </div>

    
    
    <script>
        $(document).ready(function () {
            $('#id_joven').change(function () {
                var selectedOption = $(this).find('option:selected');
                var nombreJoven = selectedOption.text();
                $('#nombre_joven').val(nombreJoven);
            });
        });
    </script>

    @Html.Partial("_footer")
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
