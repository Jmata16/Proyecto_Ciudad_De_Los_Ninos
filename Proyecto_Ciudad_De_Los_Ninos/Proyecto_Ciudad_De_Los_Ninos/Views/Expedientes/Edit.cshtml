@model API_Ciudad_De_Los_Ninos.Models.Expedientes

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edición de Expediente</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
            }

        .form-control {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        .edit-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .edit-button:hover {
                background-color: #0056b3;
            }

        textarea {
            resize: vertical;
        }

        .text-danger {
            color: #dc3545;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .col {
            flex: 0 0 50%;
            max-width: 50%;
            padding-right: 15px;
            padding-left: 15px;
        }
    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="container-main">
        <h4 class="text-center">Edición de Expediente</h4>
        <hr />
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <div class="col">
                    <label for="id_joven" class="col-form-label">Joven</label>
                    <select asp-for="id_joven" class="form-select" asp-items="ViewBag.Jovenes"></select>
                    <span asp-validation-for="id_joven" class="text-danger"></span>
                </div>
                <div class="col">
                    <label for="edad" class="col-form-label">Edad</label>
                    <input asp-for="edad" class="form-control" />
                    <span asp-validation-for="edad" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="fecha_ingreso" class="col-form-label">Fecha de Ingreso</label>
                    <input asp-for="fecha_ingreso" class="form-control" />
                    <span asp-validation-for="fecha_ingreso" class="text-danger"></span>
                </div>
                <div class="col">
                    <label for="direccion" class="col-form-label">Dirección</label>
                    <input asp-for="direccion" class="form-control" />
                    <span asp-validation-for="direccion" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="telefono_contacto" class="col-form-label">Teléfono de Contacto</label>
                    <input asp-for="telefono_contacto" class="form-control" />
                    <span asp-validation-for="telefono_contacto" class="text-danger"></span>
                </div>
                <div class="col">
                    <label for="tutor_legal" class="col-form-label">Tutor Legal</label>
                    <input asp-for="tutor_legal" class="form-control" />
                    <span asp-validation-for="tutor_legal" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <label for="antecedentes_medicos" class="col-form-label">Antecedentes Médicos</label>
                    <textarea asp-for="antecedentes_medicos" class="form-control"> </textarea>
                    <span asp-validation-for="antecedentes_medicos" class="text-danger"></span>
                </div>
                <div class="col">
                    <label for="historial_academico" class="col-form-label">Historial Académico</label>
                    <textarea asp-for="historial_academico" class="form-control" ></textarea>
                    <span asp-validation-for="historial_academico" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="notas_adicionales" class="col-sm-2 col-form-label">Notas Adicionales</label>
                <div class="col-sm-10">
                    <textarea asp-for="notas_adicionales" class="form-control"></textarea>
                    <span asp-validation-for="notas_adicionales" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-warning">Guardar</button>
                </div>
            </div>
        </form>
        <!-- Volver atrás -->
        <div class="row mt-3">
            <div class="col text-end">
                <a asp-action="Index" class="btn btn-secondary"><i class="ri-arrow-left-circle-line"></i> Volver atrás</a>
            </div>
        </div>
    </div>

    @Html.Partial("_footer")

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#id_joven').change(function () {
                var selectedOption = $(this).find('option:selected');
                var nombreJoven = selectedOption.text();
                $('#nombre_joven').val(nombreJoven);
            });
        });
    </script>
</body>
</html>
