@model API_Ciudad_De_Los_Ninos.Models.Expedientes

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles del Expediente</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .details-container {
            width: 50%;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .details-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .details-list dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .details-list dd {
            margin-left: 0;
            margin-bottom: 10px;
        }

        .action-links {
            margin-top: 20px;
            text-align: center;
        }

            .action-links a {
                margin: 0 10px;
            }

        /* Estilos del footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="details-container">
        <h2 class="details-title">Detalles del Expediente</h2>
        <hr />
        <dl class="details-list row">
            <dt class="col-sm-4">Nombre del Joven</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.nombre_joven)</dd>

            <dt class="col-sm-4">Edad</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.edad)</dd>

            <dt class="col-sm-4">Fecha de Ingreso</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.fecha_ingreso)</dd>

            <dt class="col-sm-4">Dirección</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.direccion)</dd>

            <dt class="col-sm-4">Teléfono de Contacto</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.telefono_contacto)</dd>

            <dt class="col-sm-4">Tutor Legal</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.tutor_legal)</dd>

            <dt class="col-sm-4">Antecedentes Médicos</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.antecedentes_medicos)</dd>

            <dt class="col-sm-4">Historial Académico</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.historial_academico)</dd>

            <dt class="col-sm-4">Notas Adicionales</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.notas_adicionales)</dd>
        </dl>
        <div class="action-links">
            <a href="@Url.Action("ExportExpedienteToExcel", new { id = Model.Id })" class="btn btn-success">Exportar a Excel</a>
            <a href="@Url.Action("ExportExpedienteToCsv", new { id = Model.Id })" class="btn btn-primary">Exportar a CSV</a>
            <a href="@Url.Action("ExportExpedienteToPdf", new { id = Model.Id })" class="btn btn-info">Exportar a PDF</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </div>
    </div>
    @Html.Partial("_footer")
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
</body>
</html>
