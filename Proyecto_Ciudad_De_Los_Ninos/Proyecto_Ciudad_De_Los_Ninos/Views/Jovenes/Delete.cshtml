@model API_Ciudad_De_Los_Ninos.Models.Jovenes

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos CSS adicionales específicos para esta vista */
        .delete-container {
            width: 60%; /* Ajuste del ancho del contenedor */
            margin: 50px auto;
            padding: 15px; /* Reducción del padding */
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .row {
            margin-bottom: 15px; /* Reducción del margen inferior entre filas */
        }

        .col-sm-2 {
            font-weight: bold;
        }

        .col-sm-10 {
            padding-top: 5px;
        }

        .btn-danger {
            padding: 10px 20px;
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .back-link {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-top: 20px;
        }

            .back-link:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="delete-container">
        <h2 class="text-center mb-4">Eliminar Joven</h2>

        <div>
            <h4>Jovenes</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.cedula)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.cedula)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.nombre)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.nombre)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.edad)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.edad)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.direccion)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.direccion)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.telefono_contacto)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.telefono_contacto)</dd>
            </dl>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="back-link">Volver al Listado</a>
        </form>
    </div>

    @Html.Partial("_footer")

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
</body>
</html>
