@model API_Ciudad_De_Los_Ninos.Models.Jovenes

@{
    Layout = null;
    ViewData["Title"] = "Eliminar Joven";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Joven</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 44px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .back-link {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-top: 20px;
        }

            .back-link:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="container-main">
        <h4 class="text-center">Desactivar Joven</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Cédula</th>
                        <td>@Html.DisplayFor(model => model.cedula)</td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre</th>
                        <td>@Html.DisplayFor(model => model.nombre)</td>
                    </tr>
                    <tr>
                        <th scope="row">Edad</th>
                        <td>@Html.DisplayFor(model => model.edad)</td>
                    </tr>
                    <tr>
                        <th scope="row">Localización</th>
                        <td>@Html.DisplayFor(model => model.Localizacion)</td>
                    </tr>
                    <tr>
                        <th scope="row">Dirección</th>
                        <td>@Html.DisplayFor(model => model.direccion)</td>
                    </tr>
                    <tr>
                        <th scope="row">Teléfono de Contacto</th>
                        <td>@Html.DisplayFor(model => model.telefono_contacto)</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">Desactivar</button>
        <!-- Modal de Confirmación -->
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Desactivación</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ¿Estás seguro de que deseas desactivar a <strong>@Html.DisplayFor(model => model.nombre)</strong>? Esta acción no se puede deshacer.
                    </div>
                    <div class="modal-footer">
                        <div class="d-flex justify-content-between w-100">
                            <form asp-action="Delete" class="mb-0">
                            <!-- Flexbox para la alineación -->
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <!-- mb-0 para eliminar margen inferior -->
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">Confirmar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <div class="col text-end mt-3">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="ri-arrow-left-circle-line"></i> Volver atrás
            </a>
        </div>
    </div>

    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
