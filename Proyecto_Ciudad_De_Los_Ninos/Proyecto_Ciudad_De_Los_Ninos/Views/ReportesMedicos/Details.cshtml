@model API_Ciudad_De_Los_Ninos.Models.Reportes_Medicos

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles del Reporte Médico</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .details-container {
            width: 50%;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .details-title {
            text-align: center;
            margin-bottom: 20px;
        }

        .details-list dt {
            font-weight: bold;
            margin-top: 10px;
        }

        .details-list dd {
            margin-left: 0;
            margin-bottom: 10px;
        }

        .action-links {
            margin-top: 20px;
            text-align: center;
        }

            .action-links a {
                margin: 0 10px;
            }


    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="details-container">
        <h2 class="details-title">Detalles del Reporte Médico</h2>
        <hr />
        <dl class="details-list row">
            <dt class="col-sm-4">Fecha de Creación</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.fecha_creacion)</dd>

            <dt class="col-sm-4">Contenido</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.contenido)</dd>

            <dt class="col-sm-4">Usuario</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Usuario.nombre_usuario)</dd>

            <dt class="col-sm-4">Joven</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Joven.nombre)</dd>
        </dl>

        <div class="action-links">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </div>
    </div>
    <br />
    @Html.Partial("_footer")

    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>
</body>
</html>
