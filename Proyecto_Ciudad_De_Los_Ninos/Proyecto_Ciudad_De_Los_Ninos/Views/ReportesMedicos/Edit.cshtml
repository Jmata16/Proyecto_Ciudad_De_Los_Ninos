@model API_Ciudad_De_Los_Ninos.Models.Reportes_Medicos

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editando Reporte Médico</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        .form-container {
            width: 50%;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

            .form-group input[type="text"],
            .form-group input[type="date"],
            .form-group select {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group button[type="submit"] {
                padding: 10px 20px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .form-group button[type="submit"]:hover {
                    background-color: #0056b3;
                }

        .text-danger {
            color: #dc3545;
        }

        /* Estilos para el botón "Back to List" */
        .back-link {
            margin-top: 20px;
            display: inline-block;
            text-decoration: none;
            color: #007bff;
        }

            .back-link:hover {
                color: #0056b3;
            }

    </style>
</head>
<body>

    @Html.Partial("_header")

    <div class="form-container">
        <h2>Editando Reporte Médico</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="id_usuario" class="control-label">Usuario</label>
                <select asp-for="id_usuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
                <span asp-validation-for="id_usuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="id_joven" class="control-label">Joven</label>
                <select asp-for="id_joven" class="form-control" asp-items="ViewBag.Jovenes"></select>
                <span asp-validation-for="id_joven" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="fecha_creacion" class="control-label">Fecha de Creación</label>
                <input asp-for="fecha_creacion" class="form-control" />
                <span asp-validation-for="fecha_creacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="contenido" class="control-label">Contenido</label>
                <input asp-for="contenido" class="form-control" />
                <span asp-validation-for="contenido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>

            <div>
                <a asp-action="Index" class="back-link">Cancelar</a>
            </div>
        </form>
    </div>

    @Html.Partial("_footer")

    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="~/js/plugins.js"></script>
    <script type="text/javascript" src="~/js/script.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</body>
</html>
