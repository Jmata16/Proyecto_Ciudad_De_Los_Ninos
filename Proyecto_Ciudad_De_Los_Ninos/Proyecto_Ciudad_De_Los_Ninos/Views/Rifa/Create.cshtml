@model Proyecto_Ciudad_De_Los_Ninos.Models.Rifa

@{
    ViewBag.Title = "Crear Rifa";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear Nueva Rifa</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .form-container {
            width: 80%;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
            }

            .form-group input[type="text"],
            .form-group input[type="datetime-local"] {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
            }

            .form-group button[type="submit"] {
                padding: 10px 20px;
                background-color: #E6282A;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .form-group button[type="submit"]:hover {
                    background-color: #b21d20;
                }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-top: 20px;
        }

            .back-button:hover {
                background-color: #0056b3;
            }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .col {
            flex: 0 0 50%;
            max-width: 50%;
            padding-right: 15px;
            padding-left: 15px;
        }
        /* Estilos del footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }

    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="form-container">
        <h2 class="text-center mb-4">Crear Nueva Rifa</h2>
        <form asp-action="CrearRifa">
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="FechaRifa">Fecha de la Rifa</label>
                        <input type="datetime-local" class="form-control" asp-for="FechaRifa" required />
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="Premio">Premio</label>
                        <input type="text" class="form-control" asp-for="Premio" required />
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col text-end">
                    <button type="submit" class="btn btn-primary">Crear</button>
                    <a asp-action="RifaDetalles" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>
        </form>
    </div>

    @Html.Partial("_footer")

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
