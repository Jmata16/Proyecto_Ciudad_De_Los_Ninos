@model Proyecto_Ciudad_De_Los_Ninos.Models.Rifa

@{
    Layout = null;
    ViewBag.Title = "Detalles de la Rifa";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Rifa</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <style>
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 39px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
            }

        /* Estilos del footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            position: absolute;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>
<body>

    <!-- Header -->
    @Html.Partial("_header")

    <div class="container-main">
        <h4>Detalles de la Rifa</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Fecha de la Rifa</th>
                        <td>@Model.FechaRifa.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    </tr>
                    <tr>
                        <th scope="row">Premio</th>
                        <td>@Model.Premio</td>
                    </tr>
                    <tr>
                        <th scope="row">Número Ganador</th>
                        <td>
                            @if (Model.NumeroGanador.HasValue)
                            {
                                var ganador = Model.RifaEntries?.FirstOrDefault(e => e.NumeroComprado == Model.NumeroGanador);
                                <span>@Model.NumeroGanador</span>

                                <br />
                                @if (ganador != null)
                                {
                                    <span>Comprado por: @ganador.Nombre @ganador.Apellido</span>
                                }
                                else
                                {
                                    <span>No se encontró información del comprador.</span>
                                }
                            }
                            else
                            {
                                <span>No determinado</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <a asp-action="RifaDetalles" class="btn btn-secondary">Volver atrás</a>
            </div>
        </div>
    </div>

    <!-- Footer -->
    @Html.Partial("_footer")

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
