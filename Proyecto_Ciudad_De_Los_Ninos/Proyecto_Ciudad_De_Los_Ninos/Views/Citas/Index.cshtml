@model IEnumerable<API_Ciudad_De_Los_Ninos.Models.Citas>

@{
    ViewData["Title"] = "Citas Programadas";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <style>
        /* Estilos CSS para la página */
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
            }

        .form-control {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .create-button:hover {
                background-color: #0056b3;
            }

        .delete-message {
            color: #E6282A;
            font-weight: bold;
            margin-top: 10px;
            display: none;
        }

    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="content">
        <div class="container">
            <p>
                <a href="@Url.Action("Create")" class="btn btn-primary"><i class="ri-add-circle-line" title="Agendar"></i> Agendar Cita</a>
            </p>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-danger">
                        <tr>
                            <th>Usuario</th>
                            <th>Joven</th>
                            <th>Fecha</th>
                            <th>Tipo Usuario</th>
                            <th>Detalles</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Usuario?.nombre_usuario</td>
                                <td>@item.Joven?.nombre</td>
                                <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                                <td>@Html.DisplayFor(modelItem => item.tipo_usuario)</td>
                                <td>@Html.DisplayFor(modelItem => item.detalles)</td>
                                <td class="actions d-flex">
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning btn-sm d-inline-flex align-items-center me-2"><i class="ri-edit-line me-1" title="Editar"></i></a>
                                    <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-info btn-sm d-inline-flex align-items-center me-2"><i class="ri-eye-line me-1" title="Detalles"></i></a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm d-inline-flex align-items-center"><i class="ri-delete-bin-2-line me-1" title="Eliminar"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <footer>
        @Html.Partial("_footer")
    </footer>

    <!-- Scripts -->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
</body>
</html>
