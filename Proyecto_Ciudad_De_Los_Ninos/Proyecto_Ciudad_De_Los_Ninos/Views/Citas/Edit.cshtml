@model API_Ciudad_De_Los_Ninos.Models.Citas
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 37.5px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
                display: block;
            }

        .form-control {
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
            width: 100%;
        }

        .edit-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
        }

            .edit-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>

    @Html.Partial("_header")

    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <style>
            /* Estilos CSS para la página */
            .form-container {
                width: 50%;
                margin: 50px auto;
                padding: 20px;
                border: 1px solid #ddd;
                border-radius: 8px;
                background-color: #f9f9f9;
            }

            .form-group {
                margin-bottom: 20px;
            }

                .form-group label {
                    display: block;
                    font-weight: bold;
                }

                .form-group input[type="text"],
                .form-group input[type="number"],
                .form-group input[type="date"] {
                    width: calc(100% - 10px);
                    padding: 8px;
                    border: 1px solid #ccc;
                    border-radius: 4px;
                }

                .form-group button {
                    padding: 10px 20px;
                    background-color: #E6282A;
                    color: white;
                    border: none;
                    border-radius: 4px;
                    cursor: pointer;
                }

                    .form-group button:hover {
                        background-color: #b21d20;
                    }

            .delete-message {
                color: #E6282A;
                font-weight: bold;
                margin-top: 10px;
                display: none;
            }
        </style>

        <div class="container-main">
            <h4 class="text-center">Editando Cita</h4>
            <hr />
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="row mb-3">
                    <label for="id_usuario" class="col-sm-2 col-form-label">Usuario</label>
                    <div class="col-sm-10">
                        <select asp-for="id_usuario" class="form-select" asp-items="ViewBag.Users">
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="id_usuario" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="id_joven" class="col-sm-2 col-form-label">Joven</label>
                    <div class="col-sm-10">
                        <select asp-for="id_joven" class="form-select" asp-items="ViewBag.Jovenes">
                            <option value="">Seleccione...</option>
                        </select>
                        <span asp-validation-for="id_joven" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="fecha" class="col-sm-2 col-form-label">Fecha de la Cita</label>
                    <div class="col-sm-10">
                        <input asp-for="fecha" class="form-control" />
                        <span asp-validation-for="fecha" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="detalles" class="col-sm-2 col-form-label">Detalles</label>
                    <div class="col-sm-10">
                        <input asp-for="detalles" class="form-control" />
                        <span asp-validation-for="detalles" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-warning">Guardar</button>
                    </div>
                </div>
            </form>
            <div class="row mt-3">
                <div class="col text-end">
                    <a asp-action="Index" class="btn btn-secondary"><i class="ri-arrow-left-circle-line"></i> Volver atrás</a>
                </div>
            </div>
        </div>


        @Html.Partial("_footer")
        <!-- Scripts -->
        <script src="js/jquery-1.11.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
        <script src="~/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/plugins.js"></script>
        <script src="~/js/script.js"></script>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }


</body>
</html>