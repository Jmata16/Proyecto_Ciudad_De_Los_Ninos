@model API_Ciudad_De_Los_Ninos.Models.Citas

@{
    ViewData["Title"] = "Detalle de cita";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Cita</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container3 {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h4 {
            color: #007bff;
        }

        dt {
            font-weight: bold;
        }

        .back-link {
            margin-top: 20px;
            display: inline-block;
            text-decoration: none;
            color: #007bff;
        }

            .back-link:hover {
                color: #0056b3;
            }

        /* Estilos del footer */
        footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            
            position: absolute;
            bottom: 0;
            width: 100%;
        }

            footer p {
                margin: 0;
            }
    </style>
</head>
<body>

    <!-- Header -->
    @Html.Partial("_header")

    <div class="container3">
        <h4>Detalles de la Cita</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Fecha:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.fecha)</dd>
            <dt class="col-sm-2">Tipo de Usuario:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.tipo_usuario)</dd>
            <dt class="col-sm-2">Detalles:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.detalles)</dd>
            <dt class="col-sm-2">Usuario:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Usuario.nombre_usuario)</dd>
            <dt class="col-sm-2">Joven:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Joven.nombre)</dd>
        </dl>
    
    <br/>
    
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>|
        <a asp-action="Index">Regresar al Listado</a>
    </div>

  
</body>


@Html.Partial("_footer")
<script src="js/jquery-1.11.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script type="text/javascript" src="~/js/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="~/js/plugins.js"></script>
<script type="text/javascript" src="~/js/script.js"></script>
</html>
