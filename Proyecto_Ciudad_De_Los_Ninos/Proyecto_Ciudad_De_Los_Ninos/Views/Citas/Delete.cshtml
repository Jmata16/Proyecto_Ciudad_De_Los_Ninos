@model API_Ciudad_De_Los_Ninos.Models.Citas

@{
    ViewData["Title"] = "Eliminar Cita";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Cita</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <style>
        /* Estilos personalizados */
        h4 {
            color: #333;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .container-main {
            background-color: #ffffff;
            padding: 45px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin: 20px auto;
            max-width: 800px;
            overflow: hidden;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 10px;
        }

        .col-sm-2 {
            flex: 0 0 20%;
            max-width: 20%;
            font-weight: bold;
            color: #333;
        }

        .col-sm-10 {
            flex: 0 0 80%;
            max-width: 80%;
            color: #555;
            margin-bottom: 15px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            margin-right: 10px;
            margin-top: 20px;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        #footer {
            margin-top: 30px;
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: left;
            clear: both;
        }

            #footer p {
                margin: 0;
            }
    </style>
</head>
<body>
    @Html.Partial("_header")

    <div class="container-main">
        <h4 class="text-center">Desactivar Citas</h4>
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Fecha</th>
                        <td>@Html.DisplayFor(model => model.fecha)</td>
                    </tr>
                    <tr>
                        <th scope="row">Detalles</th>
                        <td>@Html.DisplayFor(model => model.detalles)</td>
                    </tr>
                    <tr>
                        <th scope="row">Usuario</th>
                        <td>@Html.DisplayFor(model => model.Usuario.nombre_usuario)</td>
                    </tr>
                    <tr>
                        <th scope="row">Joven</th>
                        <td>@Html.DisplayFor(model => model.Joven.nombre)</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Formulario que se enviará -->
        <form asp-action="Delete" method="post" id="deleteForm">
            <input type="hidden" name="id" value="@Model.Id" /> <!-- Asegúrate de tener el Id correcto -->
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                Desactivar
            </button>

            <div class="col text-end mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="ri-arrow-left-circle-line"></i> Volver atrás
                </a>
            </div>
        </form>

        <!-- Modal de confirmación -->
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmar Desactivación</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        No se eliminarán los datos permanentemente, solo se desactivarán.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" id="confirmDeleteButton">Confirmar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    @Html.Partial("_footer")
    <!-- Scripts -->
    <script src="~/js/jquery-1.11.0.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>

    <script>
        // Manejar el clic en el botón de confirmar
        document.getElementById('confirmDeleteButton').addEventListener('click', function () {
            document.getElementById('deleteForm').submit();
        });
    </script>
</body>
</html>
