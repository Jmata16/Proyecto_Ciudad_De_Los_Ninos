        .actions a {
            margin-right: 10px;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .actions a:hover {
                color: #0056b3;
            }

        .create-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1.2em;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
        }

            .create-button:hover {
                background-color: #0056b3;
            }

        }
    </style>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/2.0.2/css/dataTables.dataTables.min.css">
</head>
<body>
    @Html.Partial("_header")

    <div class="content">
        <div class="container">
            <div class="table-responsive">
                <table id="tableShow" class="table table-striped table-bordered table-hover">
                    <thead class="table-danger">
                        <tr>
                            <th>Usuario</th>
                            <th>Joven</th>
                            <th>Fecha</th>
                            <th>Detalles</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Usuario?.nombre_usuario</td>
                                <td>@item.Joven?.nombre</td>
                                <td>@Html.DisplayFor(modelItem => item.fecha)</td>
                                <td>@Html.DisplayFor(modelItem => item.detalles)</td>
                              
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <footer>
        @Html.Partial("_footer")
    </footer>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> <!--Nuevo-->
    <script src="js/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/2.0.2/js/dataTables.min.js"></script> <!--Nuevo-->
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/Funciones/DataTable.js"></script> <!--Nuevo-->
</body>
</html>
